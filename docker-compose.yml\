version: "2"
services:
    www:
        build: .
        ports: 
            - "8001:80"
        volumes:
            - ./www:/var/www/html/
        links:
            - db
        networks:
            - default
    db:
        image: mysql:5.7
        ports: 
            - "3306:3306"
        environment:
            MYSQL_DATABASE: fma_prestaties
            MYSQL_USER: ulusoft
            MYSQL_PASSWORD: ulusoft123456789
            MYSQL_ROOT_PASSWORD: ulusoft123456789
        volumes:
            - ./migrate:/docker-entrypoint-initdb.d
            - persistent:/var/lib/mysql
        command: --character-set-server=utf8mb4 --collation-server=utf8mb4_unicode_ci
        networks:
            - default
    phpmyadmin:
        image: phpmyadmin/phpmyadmin
        links: 
            - db:db
        ports:
            - 8000:80
        environment:
            PMA_HOST: db
            MYSQL_USER: ulusoft
            MYSQL_PASSWORD: ulusoft123456789
            MYSQL_ROOT_PASSWORD: ulusoft123456789
        networks:
            - default
volumes:
    persistent:

networks:
    default:
